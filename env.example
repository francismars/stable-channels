# Stable Channels Configuration
# Copy this file to .env and fill in your values

# Required - Get these from your LSP provider
STABLE_CHANNELS_LSP_PUBKEY=your-lsp-pubkey-here
STABLE_CHANNELS_LSP_ADDRESS=your-lsp-address:9737

# Optional - These have sensible defaults
STABLE_CHANNELS_NETWORK=bitcoin
STABLE_CHANNELS_USER_NODE_ALIAS=user
STABLE_CHANNELS_USER_PORT=9736
STABLE_CHANNELS_LSP_NODE_ALIAS=lsp
STABLE_CHANNELS_LSP_PORT=9737
STABLE_CHANNELS_CHAIN_SOURCE_URL=https://blockstream.info/api
STABLE_CHANNELS_EXPECTED_USD=100.0

# Optional gateway node
STABLE_CHANNELS_GATEWAY_PUBKEY=your-gateway-pubkey
STABLE_CHANNELS_GATEWAY_ADDRESS=your-gateway-address:9735

# Optional Bitcoin RPC (if using local node)
STABLE_CHANNELS_BITCOIN_RPC_USER=your-rpc-user
STABLE_CHANNELS_BITCOIN_RPC_PASSWORD=your-rpc-password
